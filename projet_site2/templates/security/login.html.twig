{% extends 'base.html.twig' %}

{% block title %}Charlotte Tardiveau - connexion{% endblock %}

{% block body %}
<head>
    <link rel="stylesheet" href="{{ asset('stylecss/styleLogin.css')}}">
</head>
<div class="container">
    <form method="post" class="form-signin">
    {% if app.user %}
    <div class="alert alert-info">
        Vous êtes deja connecté {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">déconnexion</a>
    </div>
    {% else %}
    <h2>Connectez-vous</h2>

    <label for="username" class="nom">Adresse e-mail</label>
    <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" placeholder="Votre email" autocomplete="email" required autofocus>

    <label for="password" class="nom">Mot de passe</label>
    <input type="password" name="_password" id="password" class="form-control" placeholder="votre mot de passe" autocomplete="current-password" required>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    <button class="btn btn-primary" type="submit">connexion</button>
    </form>
    {% endif %}
</div>
{% endblock %}
